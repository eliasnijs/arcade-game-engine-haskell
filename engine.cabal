cabal-version: 2.2
name: engine
version: 0.0.1

library
  hs-source-dirs: lib
  default-language: Haskell2010
  build-depends: base >= 4.14.3.0 && < 4.15
               , gloss >= 1.13.2.1 && < 1.14
               , random >= 1.1
  exposed-modules: Config
                 , Engine
                 , Renderer
                 , Manager
                 , Start
                 , End
                 , Snake
                 , Frogger

executable engine
  main-is: Main.hs
  hs-source-dirs: src
  default-language: Haskell2010
  build-depends: base >= 4.14.3.0 && < 4.15
               , gloss >= 1.13.2.1 && < 1.14
               , engine
               , random >= 1.1
